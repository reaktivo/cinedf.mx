@require 'reset'

html, body
  width 100%
  height 100%
  font-family Karla, sans-serif

body
  color #eee
  background #222

#listing
  overflow hidden

  .item
    color white
    text-decoration none
    width 25%
    float left
    display block
    overflow hidden
    position relative
    box-sizing border-box
    @media (min-width: 320px)
      width 100%
    @media (min-width: 768px)
      width 50%
    @media (min-width: 1200px)
      width 25%

.movie
  a.text
    position absolute
    z-index 1
    box-sizing border-box
    padding 20px
    color #fff
    text-decoration none
    text-shadow 0 1px 1px #000
    top 0
    bottom 0
    left 0
    right 0
    transition background-color 0.2s ease-in-out

  a.text[href]:hover
    background rgba(0,0,0,0.5) url('/img/play.svg') no-repeat center center
    background-size 16%

  a.info
    display block
    position absolute
    size = 20px
    right size
    bottom size
    height 0
    padding-top size
    width size
    overflow hidden
    background url('/img/info.svg') no-repeat center center
    background-size cover
    z-index 2

  img.trailer
    position relative
    display block
    margin 0 auto
    width 100%

#hoy
  display table !important
  text-align center
  text-transform uppercase
  .text
    display table-cell
    vertical-align middle
    font-style italic
    h1
      font-size 24px
      color #eee
    p
      font-size 12px
      color #999
      a
        color @color
    transform rotate(-6deg)
    -webkit-transform @transform
    transform-origin 50% 50%
    -webkit-tranform-origin @transform-origin

.item:not(.movie)
  display block
  min-width 300px
  min-height 156px
