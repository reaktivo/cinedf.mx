@require 'reset'

html, body
  width 100%
  height 100%
  font-family Karla, sans-serif

body
  color #eee
  background #222

.video-container
  position relative
  padding-bottom 56.25%
  padding-top 30px
  height 0
  overflow hidden


.video-container iframe,
.video-container object,
.video-container embed
  position absolute
  top 0
  left 0
  width 100%
  height 100%


#listing
  overflow hidden

  .item
    color white
    text-decoration none
    width 25%
    float left
    display block
    overflow hidden
    position relative
    box-sizing border-box
    @media (min-width: 320px)
      width 100%
    @media (min-width: 768px)
      width 50%
    @media (min-width: 1200px)
      width 25%

.movie
  position relative
  box-shadow 0 0 1px rgba(0,0,0,0.5)
  transition all 0.15s ease-in-out
  -webkit-transition @transition
  &:hover
    z-index 3
    box-shadow 0 0 10px rgba(0,0,0,0.5)
  a.text
    position absolute
    z-index 1
    box-sizing border-box
    padding 20px
    color #fff
    text-decoration none
    text-shadow 0 1px 1px #000
    top 0
    bottom 0
    left 0
    right 0
    transition background-color 0.2s ease-in-out

  a.text[href]:hover
    background rgba(0,0,0,0.5) url('/img/info.svg') no-repeat center center
    background-size 16%


  a.info
    display block
    position absolute
    size = 20px
    right size
    bottom size
    height 0
    padding-top size
    width size
    overflow hidden
    background url('/img/info.svg') no-repeat center center
    background-size cover
    z-index 2

  img.trailer
    position relative
    display block
    margin 0 auto
    width 100%

#what
  position relative
  #hoy
    position absolute
    width 100%
    height 50%
    z-index 2
    display table !important
    text-align center
    text-transform uppercase
    text-shadow 1px 1px 1px #000
    .text
      display table-cell
      vertical-align middle
      font-style italic
      h1
        font-size 24px
        color #fff
      p
        font-size 12px
        color #ccc
        a
          color @color
      transform rotate(-6deg)
      -webkit-transform @transform
      transform-origin 50% 50%
      -webkit-tranform-origin @transform-origin
  #map
    position absolute
    z-index 1
    top 0
    left 0
    right 0
    bottom 0


.item:not(.movie)
  display block
  min-width 300px
  min-height 156px


#movie
  box-sizing border-box
  max-width 100%
  width 640px
  margin 40px auto
  a
    color #fff
    text-decoration none
    border-bottom 2px solid @color
  .text
    box-sizing border-box
    max-width 100%
    width 490px
    padding 20px
    line-height 1.4em
    margin 0 auto
    h1
      line-height 2em
      font-size 24px
  img
    display block
    margin 0 auto
